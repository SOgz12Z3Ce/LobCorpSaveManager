<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="CopyMonoFiles" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ProjectGuid>{9F634173-FF90-47FB-81EF-C35037704B89}</ProjectGuid>
    <LangVersion>3</LangVersion>
    <TargetFrameworkVersion>v3.5</TargetFrameworkVersion>
    <OutputType>Exe</OutputType>
    <AssemblyName>lobcss</AssemblyName>
    <OutputPath>..\..\out</OutputPath>
    <LibPath>..\..\lib\</LibPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="LobCorp\Exceptions\BadArguments.cs" />
    <Compile Include="LobCorp\Exceptions\BadSaveFile.cs" />
    <Compile Include="LobCorp\Save\LobCorpSaveSegment.cs" />
    <Compile Include="LobCorp\Save\LobCorpSaveSerializer.cs" />
    <Compile Include="LobCorp\Program.cs" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="Newtonsoft.Json">
      <HintPath>$(LibPath)Newtonsoft.Json.13.0.4\Newtonsoft.Json.dll</HintPath>
    </Reference>
    <ProjectReference Include="..\PseudoAssemblyCSharp\PseudoAssemblyCSharp.csproj">
	<Project>{3CE6379A-EFD2-4582-994E-48E1DFCC9F7C}</Project>
    </ProjectReference>
    <MonoFiles Include="$(LibPath)Mono-2.8.1\**\*.*" />
  </ItemGroup>

  <Target Name="CopyMonoFiles" DependsOnTargets="Build">
    <Copy
      SourceFiles="@(MonoFiles)"
      DestinationFiles="@(MonoFiles->'$(OutputPath)%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
